# Scraper Configuration
BATCH_SIZE=500
SCROLL_PAUSE=0.512
MAX_IDLE=5
SCRAPER_TIMEOUT=30000
HEADLESS=true

# Debug Configuration (Optional)
# Limit number of offers to scrape for debugging (None = no limit)
MAX_OFFERS=100

# Database Configuration Options (choose one):

# Option 1: AWS RDS (Recommended for production)
AWS_DB_ENDPOINT=your-rds-endpoint.amazonaws.com
AWS_DB_NAME=aligno-db
AWS_DB_USERNAME=your_db_username
AWS_DB_PASSWORD=your_db_password

# Option 2: Local PostgreSQL database
DATABASE_URL=postgresql://user:password@localhost:5432/aligno_db
# Alternative: individual database settings
DB_USER=aligno
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aligno_db

# OpenAI Configuration (for future AI features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=512
OPENAI_TEMPERATURE=0.0

# AWS IAM Configuration (optional, for future use)
AWS_IAM_SIGNIN_URL=https://your-account.signin.aws.amazon.com/console
AWS_IAM_USER_NAME=your_iam_user
AWS_IAM_PASSWORD=your_iam_password
AWS_IAM_ACCESS_KEY=your_access_key
AWS_IAM_SECRET_ACCESS_KEY=your_secret_key